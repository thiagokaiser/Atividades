@{
    ViewData["Title"] = "Index";
}


@using Core.Models
@model IEnumerable<Atividade>



<h2>Index</h2>

<p>
    <a asp-action="Add">Create New</a> | 
    <a asp-action="Index">Pendentes</a>
</p>
<form id="fativs">
    <table class="table" id="tativs">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Descricao
                </th>
                <th>
                    Responsavel
                </th>
                <th>
                    Setor
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Data
                </th>
                <th>
                    Encerramento
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="ativs">
            @foreach (var item in Model)
            {
            <tr id="@item.Id" prioridade="@item.Id">
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Descricao
                </td>
                <td>
                    @item.Responsavel
                </td>
                <td>
                    @item.Setor
                </td>
                <td>
                    @{
                        if (item.Categoria != null)
                        {
                            @item.Categoria.Descricao
                        }
                    }
                </td>
                <td>
                    @item.Data.ToShortDateString()
                </td>
                <td>
                    @item.DataEncerramento.ToShortDateString()
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Reabrir", "Reabrir", new { id = item.Id }) |
                    @Html.ActionLink("Detalhe", "Detalhe", new { id = item.Id }) |
                    @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
                </td>
            </tr>
            }
        </tbody>
    </table>
</form>

@section Scripts {
    <script type="text/javascript">                

    </script>
}