@{
    ViewData["Title"] = "Index";
}


@using Atividades.Models
@model IEnumerable<Atividade>

<h2>Index</h2>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Descricao
            </th>
            <th>
                Responsavel
            </th>
            <th>
                Setor
            </th>
            <th>
                Categoria
            </th>
            <th>
                Data
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Descricao
            </td>
            <td>
                @item.Responsavel
            </td>
            <td>
                @item.Setor
            </td>
            <td>
                @item.Categoria
            </td>
            <td>
                @item.Data
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                @Html.ActionLink("Detalhe", "Detalhe", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
